# 运行环境
APP_ENV=dev

# Chroma 本地目录（会自动创建）
CHROMA_DIR=./data/chroma
COLLECTION_NAME=law_rs

# 嵌入模型（小而快）
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# 检索与阈值
RETRIEVAL_K=4
RETRIEVAL_SCORE_THRESHOLD=0.6
RETRIEVAL_THRESHOLD_MODE=top1

# LLM 选择（默认用本地 Ollama 的 qwen2.5:7b）
#LLM_PROVIDER=ollama
LLM_PROVIDER=openai
#OLLAMA_MODEL=qwen2.5:7b
OLLAMA_MODEL=qwen2.5:3b
# 如要切换 OpenAI，在这里填 key 并把 LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# 对话上下文限制
MAX_HISTORY_TURNS=6
MAX_CONTEXT_CHARS=6000

